<style>
    .resize-carousel {
        max-width: 25rem;
        max-height: 25rem;
    }

    .caption-background {
        background-color: rgba(4, 4, 4, 0.58);
        border-radius: 10px;
    }
</style>

@if (Projects != null)
{
    <div class="container resize-carousel">


        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                @foreach (var project in Projects)
                {
                    <div class="carousel-item img-thumbnail @active">
                        <img src="/Images/pamati.jpg" class="d-block w-100 " alt="Picture">
                        <div class="carousel-caption d-none d-md-block caption-background">
                            <h5>@project.Title</h5>
                            <p>@project.DatePosted</p>
                        </div>
                    </div>
                    active = "";
                }

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
}
@code {
    [Parameter] public List<ProjectOutDto> Projects { get; set; }
    string active = "active";
    protected override void OnInitialized()
    {
        Projects = new List<ProjectOutDto>()
{
